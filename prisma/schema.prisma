generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  name String
  email String @unique
  password_hash String
  created_at DateTime @default(now())

  @@map("users")
}

// Este aqui precisa ser melhor elaborado no futuro, compras podem ser atreladas a um cliente
model Clients {
  id String @id @default(uuid())
  name String
  instagram_name String
  email String
  bag Bags[]

  @@map("clients")
}

model Product {
  id String @id @default(uuid())
  description String @db.VarChar(150)
  price Decimal
  cost Decimal
  stock Int? @default(0)
  stock_type StockType
  is_sold Boolean @default(false)
  created_at DateTime @default(now())
  updated_at DateTime? @default(now())
  Sales Sales[]
  BagProducts BagProducts[]

  @@map("products")
}

model Sales {
  id String @id @default(uuid())
  sale_id BigInt
  product_id String
  transaction_date DateTime @default(now())
  client_id String?
  bag_id String? // Aqui bag_id vai ter relacionamento de um para um com cliente

  product Product @relation(fields: [product_id], references: [id])

  @@map("sales")
}

model Bags {
  id String @id @default(uuid())
  client_id String
  created_at DateTime @default(now())
  is_delivered Boolean @default(false)
  delivered_at DateTime?

  client        Clients @relation(fields: [client_id], references: [id])
  bagProducts   BagProducts[]

  @@map("bags")
}

model BagProducts {
  id String @id @default(uuid())
  bag_id String
  product_id String

  bag       Bags    @relation(fields: [bag_id], references: [id])
  product   Product @relation(fields: [product_id], references: [id])

  @@map("bag_products")
}


enum StockType {
  single
  multiple
}